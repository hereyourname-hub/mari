<?xml version="1.0" encoding="utf-8"?>
<resources>
<!--    мед-->
    <style name="standardTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">15sp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>
<!--    мед-->


    <style name="TitleText" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BodyText" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="backgroundTint">@color/Charcoal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="backgroundTint">@color/HunterGreen</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginRight">3dp</item>
    </style>

    <style name="DeleteButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="backgroundTint">@color/BitterSweet</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginRight">3dp</item>
    </style>
</resources>