<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settingsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SettingsActivity">


    <ImageView
        android:id="@+id/deleteDataButton"
        android:layout_width="333dp"
        android:layout_height="101dp"
        android:layout_marginBottom="36dp"
        android:adjustViewBounds="true"
        android:backgroundTint="@color/ColumbiaBlue"
        android:fontFamily="@font/montserrat"
        android:onClick="deleteAllQuestion"

        android:src="@drawable/slideupmoon"
        android:text="add items"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/titlemoon"
        android:layout_width="205dp"
        android:layout_height="32dp"
        android:text="DELETE ALL DATA"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@id/deleteDataButton"
        app:layout_constraintEnd_toEndOf="@id/deleteDataButton"
        app:layout_constraintStart_toStartOf="@id/deleteDataButton"
        app:layout_constraintTop_toTopOf="@id/deleteDataButton" />


    <TextView
        android:id="@+id/changeHeader"
        android:layout_width="327dp"
        android:layout_height="79dp"
        android:fontFamily="@font/montserratregular"
        android:text="@string/change_daily_calorie_count"
        android:textColor="@color/prym_1"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/saveGoalButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.261" />

    <ImageView
        android:id="@+id/saveGoalButton"
        android:layout_width="333dp"
        android:layout_height="101dp"
        android:layout_marginBottom="112dp"
        android:adjustViewBounds="true"
        android:backgroundTint="@color/ColumbiaBlue"
        android:fontFamily="@font/montserrat"
        android:onClick="applyChanges"

        android:src="@drawable/slideupmoon"
        android:text="add items"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/titlemoon1"
        android:layout_width="90dp"
        android:layout_height="27dp"
        android:text="APPLY"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@id/saveGoalButton"
        app:layout_constraintEnd_toEndOf="@id/saveGoalButton"
        app:layout_constraintStart_toStartOf="@id/saveGoalButton"
        app:layout_constraintTop_toTopOf="@id/saveGoalButton" />


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/newDailyGoal"
        android:layout_width="312dp"
        android:layout_height="79dp"
        android:layout_marginTop="116dp"
        android:backgroundTint="@color/prym_1"
        android:fontFamily="@font/montserratregular"
        android:hint="@string/daily_calories"
        android:inputType="number"
        android:max="100"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/changeHeader" />


</androidx.constraintlayout.widget.ConstraintLayout>